<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/radius_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="180dp"
            android:layout_height="232dp"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imageViewHomeDownload"
                android:layout_width="180dp"
                android:layout_height="232dp"
                android:scaleType="centerCrop"
                android:background="@color/text_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#80000000"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewHomeDownload"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/viewPlayHomeDownload"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="27dp"
                android:background="@color/text_gray"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewHomeDownload"
                app:layout_constraintRight_toRightOf="parent"></View>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/radius_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="180dp"
            android:layout_height="232dp"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imageViewHomeDownload2"
                android:layout_width="180dp"
                android:layout_height="232dp"
                android:scaleType="centerCrop"
                android:background="@color/text_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view22"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#80000000"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewHomeDownload2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/viewPlayHomeDownload2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="27dp"
                android:background="@color/text_gray"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewHomeDownload2"
                app:layout_constraintRight_toRightOf="parent"></View>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>