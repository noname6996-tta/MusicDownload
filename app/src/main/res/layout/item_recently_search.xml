<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundPrimary">

    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:background="@drawable/background_radius_white"
        android:maxWidth="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHistorySearch"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto"
        android:maxWidth="160dp"
        android:maxLines="1"
        android:text="sdasdad"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:textFontWeight="400"
        android:textSize="12dp"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toStartOf="@+id/imgDeleteHistory"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6" />

    <ImageView
        android:id="@+id/imgDeleteHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:src="@drawable/ic_baseline_cancel_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintStart_toEndOf="@+id/tvHistorySearch"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>